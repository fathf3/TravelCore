
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Bırak</h4>
    <p class="mb-4"></p>
    <form  method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="CommentValue" class="form-control" placeholder="Yorumunuz ...." required="" 
            spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommentAuthor" class="form-control" placeholder="Adınız Soyadınız ... "
                                    required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" name="DestinationID" class="form-control" value="@ViewBag.DestinationId">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap ! </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.cs" type="text/javascript"></script>