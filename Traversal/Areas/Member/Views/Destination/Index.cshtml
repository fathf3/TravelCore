@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
    <th>#</th>
    <th>Sehir</th>
    <th>Süre</th>
    <th>Kapasite</th>
    <th>Fiyat</th>
    <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.CityName</td>
            <td>@item.DayNight</td>
            <td>@item.Capacity</td>
            <td>@item.Price ₺</td>
            <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info btn-sm">Detaylar</a></td>
        </tr>
    }

</table>
