@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Tur Rotası Arama</h1>

<form asp-action="GetCitiesSearchByName" method="get" asp-area="Member">

        <div>
            <p>Lütfen Aranacak şehri giriniz : <input type="text" name="search" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Sehir ara" class="btn btn-outline-info" />
            </p>
        </div>


        <table class="table table-bordered">
    <tr>
    <th>#</th>
    <th>Sehir</th>
    <th>Süre</th>
    <th>Kapasite</th>
    <th>Fiyat</th>
    <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.CityName</td>
            <td>@item.DayNight</td>
            <td>@item.Capacity</td>
            <td>@item.Price ₺</td>
            <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info btn-sm">Detaylar</a></td>
        </tr>
    }

</table>

</form>










