@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<h1>Yeni Rota Oluştur</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-12 ">

<form method="post">
   
    <div class="form-group">
        @Html.Label("Şehir")
        <input  type="text" asp-for="CityName" class="form-control"/>
    </div>
    <div class="form-group">
        @Html.Label("Gün Gece")
        <input  type="text" asp-for="DayNight" class="form-control"/>
    </div>
    <div class="form-group">
        @Html.Label("Fiyat")
        <input  type="text" asp-for="Price" class="form-control"/>
    </div>
    <div class="form-group">
        @Html.Label("Ana Görsel")
        <input  type="text" asp-for="Image" class="form-control"/>
    </div>
     <div class="form-group">
        @Html.Label("Kapasite")
        <input  type="text" asp-for="Capacity" class="form-control"/>
    </div>
      <div class="form-group">
        @Html.Label("Detay 1")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details1"></textarea>
    </div>
      <div class="form-group">
        @Html.Label("Detay 2")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details2"></textarea>
    </div>
    
    <button class="btn btn btn-secondary btn-md btn-block" style="align-content:center">Rota Oluştur</button>
</form>

</div>
</div>
</div>


<br />