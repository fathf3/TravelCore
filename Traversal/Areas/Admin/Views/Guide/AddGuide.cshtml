@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<br />


<div class="container">
<div class="row">
<div class="col-md-12" >
    <div class="card mx-auto ">
        <div class="card-header">
            <strong>Rehber Ekleme</strong>
            <small> Formu</small>
        </div>
        <div class="card-body card-block">
            <form method="post">
            <div class="form-group" >
                
                <label for="company" class=" form-control-label">İsim Soyisim</label>
                <input type="text" asp-for="Name" placeholder="Lütfen adınızı giriniz..." class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="vat" class=" form-control-label">Açıklama</label>
                <input type="text" asp-for="Description" placeholder="Lutfen açıklama giriniz ..." class="form-control">
            </div>
            <div class="form-group">
                <label for="street" class=" form-control-label">Twitter Adresi</label>
                <input type="text" asp-for="TwitterUrl" placeholder="Twitter adresinizi giriniz .." class="form-control">
            </div>
           
            <div class="form-group">
                <label for="company" class=" form-control-label">Instagram Adresiniz</label>
                <input type="text" asp-for="InstagramUrl" placeholder="Instagram adresinizi giriniz .."  class="form-control">
            </div>
             <div class="form-group">
                <label for="company" class=" form-control-label">Resim Linki</label>
                <input type="text" asp-for="Image" placeholder="Instagram adresinizi giriniz .."  class="form-control">
            </div>
                
                <div class="col-8">
                    <div class="form-group">
                        <button class="btn btn-outline-success">Kaydet</button>
                    </div>
                </div>
            
          </form>
        </div>
    </div>
</div>
</div>
</div>